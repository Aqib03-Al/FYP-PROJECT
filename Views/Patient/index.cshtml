@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="w-full max-w-[960px] px-4 py-12">
    <div class="flex flex-col gap-4 mb-10">
        <h1 class="text-3xl font-black leading-tight tracking-tight text-white sm:text-4xl">
            Hello, @User.Identity.Name! 👋
        </h1>
        <p class="text-[#9dabb9] text-lg">
            Track your health status and view your recommended lab tests here.
        </p>
    </div>

    <div class="relative overflow-hidden rounded-2xl bg-primary/10 border border-primary/20 p-8 mb-10">
        <div class="relative z-10 flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
            <div class="max-w-[500px]">
                <h2 class="text-xl font-bold text-white mb-2">Feeling unwell?</h2>
                <p class="text-sm text-gray-300">
                    Start a new symptom assessment now. Our AI will analyze your inputs and suggest the necessary medical tests.
                </p>
            </div>
            <a asp-controller="Assessment" asp-action="Start" class="flex h-12 items-center justify-center gap-2 rounded-lg bg-primary px-8 text-base font-bold text-white transition-all hover:bg-primary/90 hover:shadow-lg hover:shadow-primary/20">
                <span class="material-symbols-outlined">add_circle</span>
                New Assessment
            </a>
        </div>
        <div class="absolute -right-10 -top-10 h-40 w-40 rounded-full bg-primary/10 blur-3xl"></div>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 mb-10">
        <div class="rounded-xl border border-border-dark bg-surface-dark p-6">
            <div class="flex items-center gap-3 mb-2">
                <span class="material-symbols-outlined text-primary">history</span>
                <p class="text-sm font-medium text-[#9dabb9]">Total Assessments</p>
            </div>
            <h3 class="text-2xl font-bold text-white">03</h3>
        </div>
        <div class="rounded-xl border border-border-dark bg-surface-dark p-6">
            <div class="flex items-center gap-3 mb-2">
                <span class="material-symbols-outlined text-green-500">check_circle</span>
                <p class="text-sm font-medium text-[#9dabb9]">Last Recommendation</p>
            </div>
            <h3 class="text-2xl font-bold text-white">Vitamin D Panel</h3>
        </div>
    </div>

    <div class="flex flex-col gap-4">
        <h3 class="text-lg font-bold text-white px-1">Recent Recommendations</h3>
        <div class="rounded-xl border border-border-dark bg-surface-dark overflow-hidden">
            <div class="p-6 border-b border-border-dark flex justify-between items-center">
                <p class="text-sm text-[#9dabb9]">Your last 3 assessments</p>
                <a asp-action="History" class="text-xs text-primary font-bold hover:underline uppercase">View All</a>
            </div>

            <div class="divide-y divide-border-dark">
                <div class="flex items-center justify-between p-6 hover:bg-white/5 transition-colors">
                    <div class="flex flex-col gap-1">
                        <p class="text-sm font-bold text-white">Blood Sugar & HbA1c</p>
                        <p class="text-xs text-[#9dabb9]">Recommended on Feb 20, 2026</p>
                    </div>
                    <span class="material-symbols-outlined text-[#9dabb9]">chevron_right</span>
                </div>
                <div class="flex items-center justify-between p-6 hover:bg-white/5 transition-colors">
                    <div class="flex flex-col gap-1">
                        <p class="text-sm font-bold text-white">Complete Blood Count (CBC)</p>
                        <p class="text-xs text-[#9dabb9]">Recommended on Feb 15, 2026</p>
                    </div>
                    <span class="material-symbols-outlined text-[#9dabb9]">chevron_right</span>
                </div>
            </div>
        </div>
    </div>
</div>