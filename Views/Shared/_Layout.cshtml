<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - AI Health Assistant</title>

    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#137fec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                        "surface-dark": "#1c2127",
                        "border-dark": "#283039",
                    },
                    fontFamily: {
                        "display": ["Manrope", "sans-serif"]
                    },
                    borderRadius: { "DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px" },
                },
            },
        }
    </script>
    <style>
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #101922;
        }

        ::-webkit-scrollbar-thumb {
            background: #283039;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #3b4754;
            }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-[#111418] dark:text-white font-display overflow-x-hidden antialiased">
    <div class="relative flex min-h-screen flex-col">
        <header class="sticky top-0 z-50 w-full border-b border-[#e5e7eb] dark:border-border-dark bg-background-light/95 dark:bg-background-dark/95 backdrop-blur-md">
            <div class="mx-auto flex h-16 max-w-[960px] items-center justify-between px-4 sm:px-6 lg:px-8">
                <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined text-primary text-3xl">health_and_safety</span>
                    <h2 class="text-lg font-bold leading-tight tracking-[-0.015em] dark:text-white">AI Health Assistant</h2>
                </div>
                <nav class="hidden md:flex items-center gap-8">
                    <a class="text-sm font-medium hover:text-primary transition-colors dark:text-white" href="#how-it-works">How it Works</a>
                    <a class="text-sm font-medium hover:text-primary transition-colors dark:text-white" href="#features">Benefits</a>
                    <a class="text-sm font-medium hover:text-primary transition-colors dark:text-white" href="#partners">Partners</a>
                </nav>
                <div class="flex items-center gap-4">
                    <partial name="_LoginPartial" />

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Index" class="flex h-10 items-center justify-center rounded-lg bg-primary px-4 text-sm font-bold text-white transition-transform active:scale-95 hover:bg-primary/90">
                                <span class="truncate">Admin Dashboard</span>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Assessment" asp-action="Start" class="flex h-10 items-center justify-center rounded-lg bg-primary px-4 text-sm font-bold text-white transition-transform active:scale-95 hover:bg-primary/90">
                                <span class="truncate">Start Assessment</span>
                            </a>
                        }
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="flex h-10 items-center justify-center rounded-lg bg-primary px-4 text-sm font-bold text-white transition-transform active:scale-95 hover:bg-primary/90">
                            <span class="truncate">Start Assessment</span>
                        </a>
                    }
                </div>
            </div>
        </header>

        <main class="flex-grow flex flex-col items-center">
            @RenderBody()
        </main>

        @RenderSection("Footer", required: false)
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<footer class="w-full border-t border-[#e5e7eb] dark:border-border-dark bg-[#f9fafb] dark:bg-[#151a21] py-12 text-[#637588] dark:text-[#9dabb9]">
    <div class="mx-auto flex max-w-[960px] flex-col gap-8 px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
            <div class="flex items-center gap-3">
                <span class="material-symbols-outlined text-primary text-2xl">health_and_safety</span>
                <span class="text-lg font-bold text-[#111418] dark:text-white">AI Health Assistant</span>
            </div>
            <div class="flex flex-wrap justify-center gap-8">
                <a class="text-sm font-medium hover:text-primary transition-colors" href="#">Privacy Policy</a>
                <a class="text-sm font-medium hover:text-primary transition-colors" href="#">Terms of Service</a>
                <a class="text-sm font-medium hover:text-primary transition-colors" href="#">Contact Support</a>
            </div>
        </div>
        <div class="flex flex-col items-center justify-between gap-4 border-t border-[#e5e7eb] dark:border-border-dark pt-8 md:flex-row">
            <p class="text-sm">© 2026 AI Health Assistant. All rights reserved.</p>
            <div class="flex gap-4">
            </div>
        </div>
    </div>
</footer>
</html>